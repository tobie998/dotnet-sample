@model PagedList.IPagedList<Model.Framework.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "List of Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading col-9">
                Danh sách sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Số Đăng Ký</th>
                                <th>Ngày Đăng Ký</th>
                                <th>Hạn Sử Dụng</th>
                                <th>Quy Cách</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.RegisterCode</td>
                                <td>@item.RegisterDate</td>
                                <td>@item.ExpireDate</td>
                                <td>@item.Description</td>
                                <td>
                                    <a href="Admin/Product/Edit/@item.ID">Edit</a>
                                    <a href="Admin/Product/Delete/@item.ID">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, Page => @Url.Action("Index", new { Page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

<div style="margin-top: 5rem; float: right;">
    <input 
           type="button"
           value="Create User"
           onclick="window.location.href='@Url.Action("CreateForm")'" />
</div>